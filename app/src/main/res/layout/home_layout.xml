<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Welcome"
        android:id="@+id/labelHomeWelcome"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Username"
        android:id="@+id/labelHomeUsername"
        android:layout_below="@+id/labelHomeWelcome"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true" />'

    <Button
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_below="@+id/labelHomeUsername"
        android:text="Profile"
        android:id="@+id/btnHomeProfile"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_below="@+id/btnHomeProfile"
        android:text="Friends"
        android:id="@+id/btnHomeFriends" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_below="@+id/btnHomeFriends"
        android:text="Log Out"
        android:id="@+id/btnHomeLogout" />


</RelativeLayout>
